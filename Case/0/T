FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300;

boundaryField
{
    leftWall
    {
        type            zeroGradient;
    }

    rightWall
    {
        type            groovyBC;
        value           uniform 300;
        gradientExpression "gradient";
        fractionExpression "0";
        variables (
            "gradient= min(T_BC);"                 // Taking a value of T_BC doesnt matter min or max, both are same
        );
        timelines       (
        );       
       
      
    }

    defaultFaces
    {
        type            empty;
    }
}

